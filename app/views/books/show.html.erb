<div class="container px-5 px-sm-0">
  <%= render "devise/shared/error_messages", resource: @newbook %>
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/user_info', user: @user %>
      <%= render 'create_book_form', book: @newbook, user: @user %>
    </div>
    <div class="col-md-8 offset-md-1">
  		<h2>Book detail</h2>
  		<table class="table">
  		  <tbody>
  		    <tr>
            <td>
              <%=link_to user_path(@book.user.id) do %>
                <%= image_tag @book.user.get_profile_image(100,100) %><br />
                <%= @book.user.name %>
              <% end %>
            </td>
            <td>
              <%=link_to @book.title, book_path(@book.id) %>
            </td>
            <td><%= @book.body %></td>
            <% if (@book.user.id == current_user.id) %>
              <td>
                  <%=link_to "Edit", edit_book_path(@book.id), class: "btn btn-sm btn-success" %>
              </td>
              <td>
                <%=link_to "Destroy", book_path(@book.id), method: :delete, class: "btn btn-sm btn-danger destroy_book_77129", data: { confirm: "本当に消しますか？" } %>
              </td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>