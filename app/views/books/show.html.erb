<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/user_info', user: @user %>
      <%= render 'create_book_form', book: @newbook, user: @user %>
    </div>
    <div class="col-md-8 offset-md-1">
  		<h2>Book detail</h2>
  		<table class="table">
  		  <tbody>
  		    <tr>
            <td>
              <%=link_to user_path(@user.id) do %>
                <%= image_tag @user.get_profile_image(100,100) %><br />
                <%= @user.name %>
              <% end %>
            </td>
            <td>
              <%=link_to @book.title, book_path(@book.id) %>
            </td>
            <td><%= @book.body %></td>
            <td>
              <%=link_to "Edit", edit_book_path(@book.id), class: "btn btn-sm btn-success" %>
            </td>
            <td>
              <%=link_to "Destroy", book_path(@book.id), method: :delete, class: "btn btn-sm btn-danger destroy_book_77129", data: { confirm: "本当に消しますか？" } %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>