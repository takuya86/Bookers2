<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/user_info', user: @user %>
      <%= render 'books/create_book_form', book: @book, user: @user %>
    </div>
    <div class="col-md-8 offset-md-1">
  		<h2>Users</h2>
  		<table class="table">
  		  <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
  		  <tbody>
          <% @users.each do |user| %>
            <tr>
              <td>
                <%=link_to user_path(user.id) do %>
                  <%= image_tag user.get_profile_image(100,100) %>
                <% end %>
              </td>
              <td>
                <%= user.name %>
              </td>
              <td>
                <%=link_to "Show", user_path(user.id) %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>